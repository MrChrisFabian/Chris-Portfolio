---
interface Props {
    title: string;
}
const { title } = Astro.props;
import BarraNav from "../components/BarraNav.astro";    
---

<html lang="es">
    <head>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600;900&display=swap"
            rel="stylesheet"
        />
        <title>{title}</title>
    </head>
    <body class="bg-white">
        <main class="max-h-screen">
            <BarraNav />
            <slot />
        </main>
    </div>
    </body>
    <style is:global>
		html {
			font-family: "Poppins", sans-serif;
			background: #191919;
			color-scheme: dark;
		}
	</style>

</html>
